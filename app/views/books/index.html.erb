<div class='row'>
  <%= render 'users/info', user: @user, book: @book %>
  <div class='col-md-8 offset-md-1'>
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <tr>
        <th></th>
        <th>Title</th>
        <th colspan=3 >Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to (book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, fill:"40x40",  fallback: "no_image.jpg", size:"40x40" %>
          <% end %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.opinion %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>