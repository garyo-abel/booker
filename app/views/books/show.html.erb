<div class='row'>
 <%= render 'users/info', user: @book.user, book: @new_book %>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <% if (current_user.id == @book.user.id) %>
            <th></th>
            <th></th>
          <% end %>
        </tr>
        <tr>
          <td>
            <%= link_to (@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, fill:"40x40",  fallback: "no_image.jpg", size:"40x40" %></br><%= @book.user.name %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.opinion %></td>
          <% if (current_user.id == @book.user.id) %>
            <th><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success text-white' %></th>
            <th><%= link_to 'Destroy', book_path(@book), class: 'btn btn-sm btn-danger text-white', method: :delete, data: { confirm: "【確認】本を削除してもよろしいですか？" } %></th>
          <% end %>
        </tr>
      </table>
    </div>
</div>