<div class='row'>
 <%= render 'users/info', user: @user, book: @new_book %>
    <div class='col-md-8 offset-md-1'>
      <h2>Book Detail</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, fill:"40x40",  fallback: "no_image.jpg", size:"40x40" %></td>
          <td><%= @book.title %></td>
          <td><%= @book.opinion %></td>
          <th><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success text-white' %></th>
          <th><%= link_to 'Delete', book_path(@book), class: 'btn btn-sm btn-danger text-white', method: :delete, data: { confirm: "【確認】本を削除してもよろしいですか？" } %></th>
        </tr>
      </table>
    </div>
</div>